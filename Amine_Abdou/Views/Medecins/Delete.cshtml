@model Amine_Abdou.Models.Medecin

@{
    ViewData["Title"] = "Supprimer un Médecin";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Supprimer un Médecin</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3>Êtes-vous sûr de vouloir supprimer ce médecin ?</h3>
                    <dl class="row">
                        <dt class="col-sm-4">Nom</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nom)</dd>
                        <dt class="col-sm-4">Grade</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Grade)</dd>
                        <dt class="col-sm-4">Téléphone</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Tel)</dd>
                        <dt class="col-sm-4">Spécialité</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Specialite)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Supprimer
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>