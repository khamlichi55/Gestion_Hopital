@model IEnumerable<Amine_Abdou.Models.Medecin>

@{
    ViewData["Title"] = "Liste des Médecins";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des Médecins</h1>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-body">
                    <p>
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus"></i> Ajouter un Médecin
                        </a>
                    </p>
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Nom)</th>
                                <th>@Html.DisplayNameFor(model => model.Grade)</th>
                                <th>@Html.DisplayNameFor(model => model.Tel)</th>
                                <th>@Html.DisplayNameFor(model => model.Specialite)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Tel)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Specialite)</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i> Détails
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>