@model IEnumerable<Amine_Abdou.Models.Maladie>

@{
    ViewData["Title"] = "Liste des Maladies";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des Maladies</h1>

    <!-- Formulaire de recherche -->
    <p>
        <form method="get" asp-action="Search" class="mb-4">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Rechercher une maladie" />
                <div class="input-group-append">
                    <input type="submit" value="Rechercher" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-sync-alt"></i> Actualiser
                    </a>
                </div>
            </div>
        </form>
    </p>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nom)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">
                            <i class="fas fa-info-circle"></i> Détails
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Supprimer
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>