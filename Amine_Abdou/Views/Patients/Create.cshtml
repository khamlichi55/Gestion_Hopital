@model Amine_Abdou.Models.Patient

@{
    ViewData["Title"] = "Ajouter un Patient";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Ajouter un Patient</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nom" class="control-label font-weight-bold"></label>
                            <input asp-for="Nom" class="form-control" placeholder="Nom du patient" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tel" class="control-label font-weight-bold"></label>
                            <input asp-for="Tel" class="form-control" placeholder="Numéro de téléphone" />
                            <span asp-validation-for="Tel" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}